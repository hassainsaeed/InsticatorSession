{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "no-use-before-define": ["off"],
      "max-len": ["error", {"code":120}],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-unused-vars": ["off"],
      "radix": ["off"]
    }
}
